---
import Layout from "@/layouts/main.astro";
import { TransactionDetail } from "@/components/TransactionDetail";
import "../../styles/global.css";


// On-demand dynamic routes - render at request time
export const prerender = false;

// Alternative approach: empty getStaticPaths for on-demand rendering
export async function getStaticPaths() {
  return [];
}
---

<html lang="en" class="scroll-smooth">
	<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>Detail Transaksi - Video Generator</title>
		<meta name="description" content="Lihat detail transaksi Anda dan informasi video yang telah Anda pesan." />
	</head>
	<body class="min-h-screen bg-background antialiased">
    <main class="flex-1">
      <TransactionDetail
        invoiceNumber={(Astro.params as { invoice: string }).invoice || ""}
        client:load
      />
    </main>
  </body>
</html>
