---
import Layout from "@/layouts/main.astro";
import { TransactionDetail } from "@/components/TransactionDetail";
import { Navbar } from "@/components/Navbar";

// On-demand dynamic routes - render at request time
export const prerender = false;

// Alternative approach: empty getStaticPaths for on-demand rendering
export async function getStaticPaths() {
  return [];
}
---

<Layout content={{ title: "Detail Transaksi" }}>
  <main class="min-h-screen bg-background">
    <div class="container mx-auto px-4 py-8">
      <Navbar currentStep={2} />

      <div class="max-w-7xl mx-auto mt-8">
        <TransactionDetail
          invoiceNumber={Astro.params.invoice || ""}
          client:load
        />
      </div>
    </div>

    <footer class="bg-muted/50 border-t">
      <div class="container mx-auto px-4 py-6">
        <div class="text-center text-muted-foreground">
          <p>&copy; 2025 Video Generator. All rights reserved.</p>
        </div>
      </div>
    </footer>
  </main>
</Layout>
