---
import { Navbar } from "@/components/Navbar"
import { PaymentPage } from "@/components/PaymentPage"
import "../styles/global.css"
---

<html lang="en" class="scroll-smooth">
	<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>Pilih Paket & Pembayaran - Video Generator</title>
		<meta name="description" content="Pilih paket yang sesuai dengan kebutuhan Anda dan metode pembayaran yang diinginkan." />
	</head>

	<body class="min-h-screen bg-background antialiased">
		<!-- Navigation with Integrated Stepper -->
		<Navbar client:load currentStep={2} totalSteps={4} />

		<!-- Main Content -->
		<main class="flex-1">
			<div class="container mx-auto px-8 py-12">
				<PaymentPage client:load />
			</div>
		</main>

		<!-- Footer -->
		<footer class="border-t py-12 mt-24">
			<div class="container mx-auto px-4">
				<div class="text-center text-muted-foreground">
					<p>&copy; 2024 Video Generator. All rights reserved.</p>
				</div>
			</div>
		</footer>
	</body>
</html>
